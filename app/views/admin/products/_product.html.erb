<tr>
  <td>
    <%= image_tag product.image.tiny %>
  </td>
  <td>
    <h4><%= product.name %></h4>
    <br>
    <p><%= product.description %></p>
  </td>
  <td>
    <%= product.category.name %>
  </td>
  <td>
  <aside class="price">
  <% if active_sale? %>
  <strike><%= humanized_money_with_symbol product.price %></strike>
  <span class="text-danger"> <%= humanized_money_with_symbol (product.price * current_sale[0].percent_off / 100)%></span>
<% else %>
  <%= humanized_money_with_symbol product.price %>
<% end %>
  </aside>
   

  </td>
  <td>
    <%= product.quantity %>
  </td>
  <td>
    <%= link_to fa_icon('trash'), [:admin, product], class: 'btn btn-sm btn-danger', method: :delete, data: { confirm: "Are you sure?" } %>
  </td>
</tr>