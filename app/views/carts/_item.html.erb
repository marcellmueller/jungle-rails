<tr>
  <td>
    <%= image_tag product.image.tiny %>
  </td>
  <td>
    <h4><%= product.name %></h4>
    <br>
    <p><%= product.description %></p>
  </td>
  <td>
  <aside class="price">

  <%# Price formatting if sale exists, needs to be DRY'd up %>
  <% if active_sale? %>
    <strike><%= humanized_money_with_symbol product.price %></strike>
    <span class="text-danger"> <%= humanized_money_with_symbol (product.price - (product.price * current_sale[0].percent_off / 100)) %></span>
  <% else %>
    <%= humanized_money_with_symbol product.price %>
  <% end %>
  <%# -------------------------------------------------------%>
  
  </aside>

  </td>
  <td>
    <%= button_to remove_item_cart_path(product_id: product.id), class: 'btn btn-xs btn-danger' do %> - <% end %>
    <%= quantity %>
    <%= button_to add_item_cart_path(product_id: product.id), class: 'btn btn-xs btn-success' do %> + <% end %>
  </td>
  <td>

  <%# Price formatting if sale exists, needs to be DRY'd up %>
  <% if active_sale? %>
    <strike><%= humanized_money_with_symbol product.price %></strike>
    <span class="text-danger"> <%= humanized_money_with_symbol (product.price - (product.price * current_sale[0].percent_off / 100)) %></span>
  <% else %>
    <%= humanized_money_with_symbol product.price %>
  <% end %>
  <%# -------------------------------------------------------%>

    </td>
</tr>
