<section class="orders-show">

  <header class="page-header">
    <h1>Order #<%= @order.id %></h1>
  </header>

  <div class="order-summary jumbotron">

  <table class="table table-bordered">
  <thead>
    <tr>
      <th colspan="2">Product</th>
      <th>Unit Price</th>
      <th>Quantity</th>
      <th>Price</th>
    </tr>
  </thead>
  <tbody>
  <%= render @order.line_items %>

  </tbody>
  <tfoot>
    <tr>
      <th colspan="4">
        TOTAL:
      </th>
      <th>
      <% if active_sale? %>
      <strike><%= humanized_money_with_symbol @order.total_cents / 100.0 %></strike>
      <span class="text-danger"> <%= humanized_money_with_symbol @order.total_cents * current_sale[0].percent_off / 10000.0%></span>
    <% else %>
      <%= humanized_money_with_symbol @order.total_cents / 100.0 %>
    <% end %>
      </th>
    </tr>
  </tfoot>
</table>

   <h4>Email:   <%= @order.email %></h4>

    <h4>Thank you for your order!</h4>
  </div>

  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>

</section>
